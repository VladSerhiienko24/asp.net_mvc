@model Tours_1._0.Models.ApplicationUser
@{
    ViewBag.Title = "Блокировка";
}

<h2>Блокировка</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.Id)
        <div class="form-group">
            @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)
                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @if (Model.LockoutEnabled)
                {
                    <input type="submit" value="Разблокировать" class="btn btn-success" />
                }
                else
                {
                    <input type="submit" value="Заблокировать" class="btn btn-danger" />
                }
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Вернуться назад", "Index", null, new { @class = "btn btn-default" })
</div>